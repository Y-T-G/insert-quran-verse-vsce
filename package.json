{
  "name": "insert-quran-verse",
  "displayName": "Insert Quran Verse",
  "description": "Searches for a word in all the verse and gives you the ability to quickly insert one of the found verse.",
  "version": "0.0.1",
  "repository": {"url": "https://github.com/Y-T-G/insert-quran-verse-vsce"},
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "insert-quran-verse.searchQuran",
        "title": "Insert Quran verse"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Preprocessing",
      "properties": {
        "insert-quran-verse.prefix": {
          "type": "string",
          "default": "",
          "description": "Define a prefix to be added before the verse"
        },
        "insert-quran-verse.suffix": {
          "type": "string",
          "default": "",
          "description": "Define a suffix to be added after the verse"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
